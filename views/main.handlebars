<script src="https://kit.fontawesome.com/525a8daf37.js" crossorigin="anonymous"></script>
<script src="/bootstrapJs/bootstrap.js"></script>
<script src="/jquery/jquery.js"></script>

<script>
    $(document).ready(function() {
        $(".fruta").mouseover(function() {
            $(this).removeClass('opacity-75')
        });
        $(".fruta").mouseout(function() {
            $(this).addClass('opacity-75')
        });

        var carrito = [];

        function agregarAlCarrito(producto) {
            carrito.push(producto);
            actualizarCarrito();
        }

        function actualizarCarrito() {
            var productosCarrito = $("#productosCarrito");
            productosCarrito.empty();
            carrito.forEach(function(producto) {
                productosCarrito.append(`<img src="/img/${producto}.png" style="width: 100px; height: 100px;">`);
            });
        }

        $(".producto-img").on("click", function() {
            var producto = $(this).data("producto");
            agregarAlCarrito(producto);
        });
    });

</script>
</body>
</html>